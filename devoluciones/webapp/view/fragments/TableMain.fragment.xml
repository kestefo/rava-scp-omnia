<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:f="sap.ui.layout.form">
    <Table items="{oModelDevolucion>/DevolucionesCreados}"  mode="MultiSelect" growingThreshold="20">
        <headerToolbar>
            <Toolbar>
                <Text text="{i18n>textNuevaSolicitudDevolucion}"/>
                <ToolbarSpacer/>
                <Button text="{i18n>txtbtnFacturaBoleta}" press="_onPressAddFacturaBoleta" type="Success" icon="sap-icon://add" tooltip="{i18n>tooltipbtnAdd}"/>
                <Button text="{i18n>txtbtnProducto}" press="_onPressAddProducto" type="Success" icon="sap-icon://add" tooltip="{i18n>tooltipbtnAdd}"/>
                <Button press="_onPressDeletePedido" type="Reject" icon="sap-icon://delete" tooltip="{i18n>tooltipbtnDelete}"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleColNumGuia}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                </header>
            </Column>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleColEstado}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                </header>
            </Column>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleColCliente}" width="auto" maxLines="1" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                </header>
            </Column>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleColFechaRegistro}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                </header>
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Inactive">
                <cells>
                    <Text text="{oModelDevolucion>nguia}"/>
                    <ObjectStatus text="{oModelDevolucion>estado}" icon="{oModelDevolucion>icon}" state="{oModelDevolucion>estate}" />
                    <Text text="{oModelDevolucion>cliente}"/>
                    <Text text="{oModelDevolucion>fecha}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>