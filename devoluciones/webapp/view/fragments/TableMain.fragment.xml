<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:f="sap.ui.layout.form" xmlns:fb="sap.ui.comp.filterbar">
    <fb:FilterBar id="filter" showClearOnFB="false" clear="onClear" showFilterConfiguration="false" search="onBuscar" useToolbar="false" showGoOnFB="false" showRestoreButton="true">
     
         <HBox wrap="Wrap" alignItems="Center" direction="Row" fitContainer="false" width="auto" height="auto"
						justifyContent="Center" renderType="Div" visible="true" displayInline="false">
            <items>
                <VBox height="100%" alignItems="Center">
                    <items>
                    <Label text="{i18n>txtDesde}"/>
                        <DatePicker
                        id="sfechaComprobante10"
                        change="fnChangeFechaComprobante"
                        placeholder="DD/MM/YYYY"
                        width="auto"
                        value="{Proyect>/fecha_Comprobante}"
                        valueState="{Proyect>/fecCompValState}"
                        editable="{Proyect>/HABILI_CAMPO}"
                        valueStateText="{Proyect>/fecCompValStateText}"
                        visible="true"
                        valueFormat="dd/MM/yyyy"
                        displayFormat="dd/MM/yyyy"
                    />
                    </items>
                </VBox>
                
               
            </items>
        </HBox>

        
          <HBox wrap="Wrap" alignItems="Center" direction="Row" fitContainer="false" width="auto" height="auto"
						justifyContent="Center" renderType="Div" visible="true" displayInline="false">
            <items>
               
                <VBox height="100%">
                    <items>
                    <Label text="{i18n>txtHasta}"/>
                         <DatePicker
                        id="sfechaComprobante20"
                        change="fnChangeFechaComprobante"
                        placeholder="DD/MM/YYYY"
                        width="auto"
                        value="{Proyect>/fecha_Comprobante}"
                        valueState="{Proyect>/fecCompValState}"
                        editable="{Proyect>/HABILI_CAMPO}"
                        valueStateText="{Proyect>/fecCompValStateText}"
                        visible="true"
                        valueFormat="dd/MM/yyyy"
                        displayFormat="dd/MM/yyyy"
                    />
                    </items>
                </VBox>

              
            </items>
        </HBox>
          <HBox wrap="Wrap" alignItems="Center" direction="Row" fitContainer="false" width="auto" height="auto"
						justifyContent="Center" renderType="Div" visible="true" displayInline="false">
            <items>
               
                <VBox height="100%">
                    <items>
                    <Label text="{i18n>txtSelectCliente}"/>
                        <ComboBox id="selectCajadER01" width="" selectedKey="" items="{oModelDevolucion>/FiltroCliente}" placeholder="---Seleccionar---" change="onPressSelect">
                        <core:Item key="{oModelDevolucion>id}" text="{oModelDevolucion>cliente}" />
                    </ComboBox>
                    </items>
                </VBox>
               
            </items>
        </HBox>
        
       <HBox class="sapUiSmallMarginTop" wrap="Wrap" alignItems="Center" direction="Row" fitContainer="false" width="auto" height="auto"
						justifyContent="End" renderType="Div" visible="true" displayInline="false">
        <items>
            <Button text="{i18n>txtbtnBuscar}" class="sapUiMediumMarginEnd" type="Emphasized" icon="sap-icon://search" press="onBuscar" iconFirst="true" width="auto"
                enabled="true" visible="true" iconDensityAware="false"/>
            <Button text="" class="sapUiMediumMarginEnd" type="Transparent" icon="sap-icon://refresh" press="onRefrecarFiltro" iconFirst="true" width="auto"
                enabled="true" visible="true" iconDensityAware="false"/>
        </items>
        </HBox>
     
    </fb:FilterBar>

    <Table id="idTablaPrincipal" items="{oModelDevolucion>/DevolucionesCreados}" mode="MultiSelect" growingThreshold="20">
        <headerToolbar>
            <Toolbar>
                <Text text="{i18n>textNuevaSolicitudDevolucion}" />
                <ToolbarSpacer />
                <Button text="{i18n>txtbtnFacturaBoleta}" press="_onPressAddFacturaBoleta" type="Success" icon="sap-icon://add" tooltip="{i18n>tooltipbtnAdd}" />
                <Button text="{i18n>txtbtnProducto}" press="_onPressAddProducto" type="Success" icon="sap-icon://add" tooltip="{i18n>tooltipbtnAdd}" />
                <Button press="_onPressDeletePedido" type="Reject" icon="sap-icon://delete" tooltip="{i18n>tooltipbtnDelete}" />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleColNumGuia}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" />
                </header>
            </Column>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleColCliente}" width="auto" maxLines="1" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true" />
                </header>
            </Column>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleColFechaRegistro}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" />
                </header>
            </Column>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleColReFact}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" />
                </header>
            </Column>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleColMontoNC}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" />
                </header>
            </Column>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleColLote}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" />
                </header>
            </Column>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleColMotivo}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" />
                </header>
            </Column>
            <!-- <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleColEstado}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" />
                </header>
            </Column> -->
            
            
        </columns>
        <items>
            <ColumnListItem type="Inactive">
                <cells>
                    <Text text="{oModelDevolucion>nguia}" />
                    <!-- <ObjectStatus text="{oModelDevolucion>estado}" icon="{oModelDevolucion>icon}" state="{oModelDevolucion>estate}" /> -->
                    <Text text="{oModelDevolucion>cliente}" />
                    <Text text="{oModelDevolucion>fecha}" />
                    <Text text="{oModelDevolucion>Ref.Factura}" />
                    <Text text="{oModelDevolucion>Monto}" />
                    <Text text="{oModelDevolucion>Lote}" />
                    <Text text="{oModelDevolucion>Motivo}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
