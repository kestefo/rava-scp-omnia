<mvc:View controllerName="devoluciones.controller.PrimeraPantalla" xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:fb="sap.ui.comp.filterbar"
    xmlns="sap.m">
    <!-- <Shell > -->
        <Page id="page" title="{i18n>txtPrimerPant}">
            
            <content>
                <fb:FilterBar id="filter02" showClearOnFB="false" clear="onClear" showFilterConfiguration="false" search="onBuscar" useToolbar="false" showGoOnFB="false" showRestoreButton="false">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem name="idActualizacion" groupName="Filters" label="{i18n>txtActualizacion}" visibleInFilterBar="true">
                        <fb:control>
                            <Button text="{i18n>txtSincronizar}" type="Emphasized"/>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem name="idPedidos" groupName="Filters" label="{i18n>txtPedidos}" visibleInFilterBar="true">
                        <fb:control>
                            <Button text="{i18n>txtTomaPedido}" type="Emphasized"/>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem name="idDevoluciones" groupName="Filters" label="{i18n>txtDevoluciones}" visibleInFilterBar="true">
                        <fb:control>
                            <Button text="{i18n>txtbtnDevoluciones}" type="Emphasized" press="onPantallaDevoluciones"/>
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
            </content>
        </Page>
    <!-- </Shell > -->
</mvc:View>