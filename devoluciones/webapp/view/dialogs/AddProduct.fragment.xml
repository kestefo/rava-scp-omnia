<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog contentHeight="{=${device>/system/phone}?'25%':'25%'}" showHeader="false" contentWidth="{=${device>/system/phone}?'40%':'40%'}" afterOpen="_afterOpenAddPedido">
        <NavContainer id="navcIdGroupProducto">
            <Page id="IdProductoCenter" showHeader="true" showNavButton="false" title="{i18n>titleDialogAddCliente}">
                <content>
                    <VBox width="auto" class="sapUiSmallMargin">
                        <Text text="{i18n>titleAddDescripcionRuc}" />
                        <ComboBox id="slRuc" items="{oModelDevolucion>/AddNombreProduct}" width="100%" change="_onChangeProducto" selectedKey="{oModelDevolucion>/keyProducto}">
                            <core:Item key="{oModelDevolucion>RUC}" text="{oModelDevolucion>Descripcion}" />
                        </ComboBox>

                        <Button text="{i18n>txtbtnBuscar}" visible="true" press="BusquedaProducto" custom:custom="closeClient" type="Emphasized"  icon="sap-icon://search"/>
                    </VBox>
                </content>
                <headerContent>
                    <Button text="" press="onGoHome" type="Transparent" icon="sap-icon://refresh" iconFirst="true" width="auto" enabled="true" visible="true" />
                </headerContent>
            </Page>
        </NavContainer>
        <buttons>
            <Button text="{i18n>accpetText}" visible="{path:'oModelDevolucion>/addClientVisible'}" press="_onAcceptDevolucion" custom:custom="default" type="Accept" />
            <Button text="{i18n>cancelText}" visible="true" press="_onPressClose" custom:custom="closeProduct" type="Default" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
