<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:f="sap.ui.layout.form">
    <Table id="tbProductos" items="{oModelPedidoVenta>/DataGeneral/oMaterial}"  mode="{=${oModelPedidoVenta>/DataGeneral/sStatus}==='C'?'MultiSelect':'None'}" growingThreshold="20">
        <headerToolbar>
            <Toolbar>
                <!-- <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%"> -->
                    <!-- <Label id="lTotalProductos" visible="{=${device>/system/phone}?false:true}"/>
                    <Label id="lCantidadProductos" visible="{=${device>/system/phone}?false:true}"/> -->
                    <!-- <StepInput id="siContador" change="_onChangeCounter" value="1" width="5rem" min="0" max="50"/> -->
                    <!-- <Input value="" placeholder="{i18n>titleTableBuscar}" width="auto" liveChange="_onLiveChangeBuscar"></Input> -->
                <!-- </HBox> -->
                <ToolbarSpacer/>
                <Input value="" placeholder="{i18n>titleTableBuscar}" width="auto" liveChange="_onLiveChangeBuscar"></Input>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleDetColProducto}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                </header>
                <footer>
                    <Text text="{i18n>titleFooterColProducto}"/>
                </footer>
            </Column>
            <Column width="5rem" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleDetColCantidad}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                </header>
                <footer>
                    <Label id="lCantidadProductos" visible="{=${device>/system/phone}?false:true}"/>
                </footer>
            </Column>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleDetColPrecio}" width="auto" maxLines="1" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                </header>
            </Column>
            <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleDetColTotal}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                </header>
                <footer>
                    <Label id="lTotalProductos" visible="{=${device>/system/phone}?false:true}"/>
                </footer>
            </Column>
            <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleDetColDesc}" width="auto" maxLines="2" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                </header>
            </Column>
            <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleDetColDescVol}" width="auto" maxLines="2" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                </header>
            </Column>
            <Column id="clMotivo" width="11rem" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="{i18n>titleAddColMotivo}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                </header>
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Inactive">
                <cells>
                    <Text text="{oModelPedidoVenta>Maktg}"/>
                    <Text text="{path:'oModelPedidoVenta>cantidad', formatter: '.formatInteger'}"/>
                    <Text text="{path:'oModelPedidoVenta>Kbetr', formatter: '.currencyFormat'}"/>
                    <Text text="{path: 'oModelPedidoVenta>total', formatter: '.currencyFormat'}"/>
                    <Text text="{oModelPedidoVenta>descuentos}"/>
                    <Text text="{oModelPedidoVenta>descuentosVolumen}"/>
                    <Input value="{oModelPedidoVenta>descMotivo}" editable="false" visible="{=${oModelPedidoVenta>status}==='None'?false:true}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>