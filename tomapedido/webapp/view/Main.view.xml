<mvc:View controllerName="tomapedido.controller.Main" xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Shell >
        <Page id="page" title="{i18n>title}">
            <ObjectHeader
                id="objheaderMain"
                responsive="true"
                title="{oModelPedidoVenta>/User/nameDescription}"
                numberState="Success"
                backgroundDesign="Translucent">
                <headerContainer>
                    <HeaderContainer scrollStep="200" id="headerContainer" scroll="onScroll" content="{/ContentData/}">
                        <NumericContent size="S" scale="M" value="{value}" valueColor="{color}" indicator="{growth}" press="press" />
                    </HeaderContainer>
                </headerContainer>
            </ObjectHeader>
            <headerContent>
                <Button text="" press="_onbtnRefresh" type="Transparent" icon="sap-icon://refresh" tooltip="{i18n>tooltipbtnRefresh}"/>
                <Button text="" press="_onbtnHome" type="Transparent" icon="sap-icon://home" tooltip="{i18n>tooltipbtnHome}"/>
            </headerContent>
            <content>
                <VBox >
                    <IconTabBar
                        id="idIconTabBarMain"
                        headerMode="Inline"
                        expanded="{device>/isNoPhone}">
                        <items>
                            <IconTabFilter key="keyMain" text="{i18n>textIconTabPedido}">
                                <VBox id="vbTableDetalle">
                                    <core:Fragment fragmentName="tomapedido.view.fragments.TableMain" type="XML"/>
                                </VBox>
                            </IconTabFilter>
                            <IconTabFilter key="keyDesc" text="{i18n>textIconTabDesc}" visible="false">
                                <VBox width="100%" wrap="Wrap">
                                    <VBox width="auto" class="sapUiSmallMargin">
                                        <ComboBox selectedKey="01" id="slDescuento" items="{oModelPedidoVenta>/DescSelect}" width="100%" change="">
                                            <core:Item key="{oModelPedidoVenta>key}" text="{oModelPedidoVenta>desc}"/>
                                        </ComboBox>
                                    </VBox>
                                    <VBox width="auto" class="sapUiSmallMargin">
                                        <MessageStrip
                                            text="{i18n>textErrorDescuento}"
                                            type="Error">
                                        </MessageStrip>
                                    </VBox>
                                </VBox>
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                    
                </VBox>
            </content>
        </Page>
    </Shell >
</mvc:View>
